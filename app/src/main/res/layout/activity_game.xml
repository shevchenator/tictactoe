<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/game_base_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:background="#888888">

    <android.support.v7.widget.GridLayout
        android:id="@+id/game_board_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:rowCount="3"
        app:columnCount="3">

        <TextView
            android:id="@+id/game_cell_1_1"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="@dimen/cell_margin"
            android:gravity="center"
            android:textSize="40sp"
            android:background="@android:color/white"/>

        <TextView
            android:id="@+id/game_cell_1_2"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:gravity="center"
            android:layout_margin="@dimen/cell_margin"
            android:textSize="40sp"
            android:background="@android:color/white"/>

        <TextView
            android:id="@+id/game_cell_1_3"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:gravity="center"
            android:layout_margin="@dimen/cell_margin"
            android:textSize="40sp"
            android:background="@android:color/white"/>

        <TextView
            android:id="@+id/game_cell_2_1"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:gravity="center"
            android:layout_margin="@dimen/cell_margin"
            android:textSize="40sp"
            android:background="@android:color/white"/>

        <TextView
            android:id="@+id/game_cell_2_2"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:gravity="center"
            android:layout_margin="@dimen/cell_margin"
            android:textSize="40sp"
            android:background="@android:color/white"/>

        <TextView
            android:id="@+id/game_cell_2_3"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:gravity="center"
            android:layout_margin="@dimen/cell_margin"
            android:textSize="40sp"
            android:background="@android:color/white"/>

        <TextView
            android:id="@+id/game_cell_3_1"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:gravity="center"
            android:layout_margin="@dimen/cell_margin"
            android:textSize="40sp"
            android:background="@android:color/white"/>

        <TextView
            android:id="@+id/game_cell_3_2"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:gravity="center"
            android:layout_margin="@dimen/cell_margin"
            android:textSize="40sp"
            android:background="@android:color/white"/>

        <TextView
            android:id="@+id/game_cell_3_3"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:gravity="center"
            android:layout_margin="@dimen/cell_margin"
            android:textSize="40sp"
            android:background="@android:color/white"/>


    </android.support.v7.widget.GridLayout>

    <Button
        android:id="@+id/game_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="New Game"/>

    <Button
        android:id="@+id/game_ai_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Start AI"/>
    
</RelativeLayout>
